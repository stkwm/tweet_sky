<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-8 text-center">
      <h1 class="mt-4 text-black-50 text-left">ユーザー一覧</h1>
    </div>
    <div class="col-8 mt-3">
      <% @users.each do |user| %>
        <div class="media border p-3">
          <% if user.image_name %>
            <img class="mr-3" src="<%= "/user_images/#{user.image_name}" %>" style="max-width: 40px; height: auto;">
          <% else %>
            <span class="fas fa-user fa-3x mr-3" style="color: grey;"></span>
          <% end %>
          <div class="media-body">
            <h5><%= link_to(user.name, "/users/#{user.id}") %></h5>
            <div class="mt-3"><%= user.self_intro %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>