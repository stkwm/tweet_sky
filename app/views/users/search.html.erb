<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-8 text-center">
      <h1 class="mt-4 text-black-50 text-left">検索結果<span style="color:grey"> (<%= @search_results_count %>) </span></h1>
    </div>
    <div class="col-8 mt-3">
      <% if @search_results %>
      <% @search_results.each do |search_result| %>
      <div class="media border p-3">
        <% if search_result.image_name %>
          <img class="mr-3" src="<%= "/user_images/#{search_result.image_name}" %>" style="max-width: 40px; height: auto;">
        <% else %>
          <span class="fas fa-user fa-3x mr-3" style="color: grey;"></span>
        <% end %>
        <div class="media-body">
          <h5><%= link_to(search_result.name, "/users/#{search_result.id}") %></h5>
          <div class="mt-3"><%= search_result.self_intro %></div>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
