<div class="row justify-content-center mt-4">
  <div class="col-8 text-center">
    <div class="card">
      <div cslass="card-header">
        <% if @user.image_name %>
          <img src="<%= "/user_images/#{@user.image_name}" %>" style="width: 40px; height: auto;">
        <% else %>
          <span class="fas fa-user fa-3x" style="color: grey;"></span>
        <% end %>
        <span><%= link_to(@user.name, "/users/#{@user.id}") %></span>
      </div>
      <div class="card-body">
        
      </div>
    </div>
      
</div>
  
  <div>
    <%= @post.content %>
    <%= @post.created_at %>
  </div>
  
</div>
<div>
  <% if Like.find_by(post_id: @post.id, user_id: @current_user.id) %>
    <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
      <span class="fas fa-heart" style="color: red;"></span>
    <% end %>
    <% else %>
    <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
      <span class="fas fa-heart" style="color: grey;"></span>
    <% end %>
  <% end %>
</div>
<div>
  <% if @current_user.id == @user.id %>
    <%= link_to("編集", "/posts/#{@post.id}/edit") %>
    <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
  <% end %>
</div>